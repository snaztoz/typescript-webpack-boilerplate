{
    "extends": "@tsconfig/recommended/tsconfig.json",

    "compilerOptions": {
        "module": "es6",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "app/*": ["src/*"],
        },
        "outDir": "dist/",
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}